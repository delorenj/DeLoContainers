# Node-RED stack configuration
# Copy to .env and customize

# Domain routed by Traefik
NODERED_DOMAIN=nodered.delo.sh

# Host paths (absolute)
WATCH_DIR=/home/delorenj/recordings
PUBLIC_DIR=/home/delorenj/DevCloud/ss
TRANSCRIPT_DIR=/home/delorenj/d/Transcriptions

# Public base URL for uploaded media
PUBLIC_BASE_URL=https://ss.delo.sh

# Bloodbank publisher HTTP endpoint (host-reachable from container)
BLOODBANK_HTTP_URL=http://host.docker.internal:8682
BLOODBANK_EXCHANGE=bloodbank.events.v1
# Optional direct AMQP access (if using AMQP nodes)
BLOODBANK_RABBIT_URL=amqp://guest:guest@host.docker.internal:5672/

# Fireflies API key (GraphQL)
FIREFLIES_API_KEY=REPLACE_ME

# Where Fireflies should send webhook events
FIREFLIES_WEBHOOK_URL=https://nodered.delo.sh/webhooks/fireflies

# User/group for file permissions
PUID=1000
PGID=1000

# Timezone
TZ=America/Los_Angeles
