#!/usr/bin/env bash
#MISE description="Show Gluetun VPN logs for troubleshooting"

set -euo pipefail

echo "ğŸ” Gluetun VPN Logs:"
echo "===================="

if docker compose ps gluetun | grep -q "Up"; then
    echo "ğŸ“¡ VPN Status: Running"
    echo ""
    echo "ğŸ“‹ Recent logs (last 50 lines):"
    docker compose logs --tail=50 gluetun
    echo ""
    echo "ğŸ”„ Following live logs (Ctrl+C to stop):"
    docker compose logs -f gluetun
else
    echo "âŒ Gluetun container is not running"
    echo "ğŸ’¡ Try: mise run dev:start"
fi
