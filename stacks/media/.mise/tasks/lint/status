#!/usr/bin/env bash
#MISE description="Check status of all media services"

set -euo pipefail

echo "📊 Media Services Status:"
echo "========================"
docker compose ps

echo ""
echo "🔗 Service URLs:"
echo "- Prowlarr: http://localhost:9696"
echo "- qBittorrent: http://localhost:8080 (admin/adminadmin)"

echo ""
echo "🔍 Quick Health Check:"
if docker compose ps | grep -q "Up"; then
    echo "✅ Services are running"
else
    echo "❌ Some services may be down"
fi
