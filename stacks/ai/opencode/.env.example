# OpenCode Configuration
OPENCODE_HOSTNAME=0.0.0.0
OPENCODE_PORT=4096

# API Key Configuration
# Set to true to generate a new API key on container startup
GENERATE_API_KEY=false

# Pre-generated API key (optional)
# If not set and GENERATE_API_KEY=true, a new key will be generated
OPENCODE_API_KEY=

# Traefik Configuration
# The hashed key for Traefik authentication (generated by generate-apikey.sh)
OPENCODE_HASHED_KEY=
